name: CI Workflow

on:
    push:
        branches:
            - main

jobs:
    build:
        runs-on: self-hosted

        steps:
            - name: Checkout repository
              uses: actions/checkout@v4

            - name: Notify start of CI workflow
              run: |
                curl -s -X POST https://api.telegram.org/bot$TELEGRAM_BOT/sendMessage \
                    -d chat_id=$TELEGRAM_CHAT_ID \
                    -d text="CI workflow started for branch: $GITHUB_REF"

            - name: Set up Docker Buildx
              uses: docker/setup-buildx-action@v1

            - name: Login to Docker Hub
              uses: docker/login-action@v3
              with:
                  username: ${{ secrets.DOCKER_USERNAME }}
                  password: ${{ secrets.DOCKER_PASSWORD }}

            - name: Build and push Docker image
              uses: docker/build-push-action@v6
              with:
                  context: tests/client
                  dockerfile: Dockerfile.arm64  
                  push: true
                  platforms: linux/arm64
                  tags: akhaladze/ipsec-client:latest

            - name: Notify successful build and push
              run: |
                curl -s -X POST https://api.telegram.org/bot$TELEGRAM_BOT/sendMessage \
                    -d chat_id=$TELEGRAM_CHAT_ID \
                    -d text="Successfully built and pushed Docker image for branch: $GITHUB_REF"

        runs-on: self-hosted, pi5
        steps:
            - name: Checkout repository
              uses: actions/checkout@v4

            - name: Notify start of CI workflow
              run: |
                curl -s -X POST https://api.telegram.org/bot$TELEGRAM_BOT/sendMessage \
                    -d chat_id=$TELEGRAM_CHAT_ID \
                    -d text="CI workflow started for branch: $GITHUB_REF"

            - name: Set up Docker Buildx
              uses: docker/setup-buildx-action@v1

            - name: Login to Docker Hub
              uses: docker/login-action@v3
              with:
                  username: ${{ secrets.DOCKER_USERNAME }}
                  password: ${{ secrets.DOCKER_PASSWORD }}

            - name: Build and push Docker image
              uses: docker/build-push-action@v6
              with:
                  context: tests/client
                  dockerfile: Dockerfile.arm64  
                  push: true
                  platforms: linux/arm64
                  tags: akhaladze/ipsec-client:latest
                  tags: akhaladze/ipsec-client:latest-arm64

            - name: Notify successful build and push
              run: |
                curl -s -X POST https://api.telegram.org/bot$TELEGRAM_BOT/sendMessage \
                    -d chat_id=$TELEGRAM_CHAT_ID \
                    -d text="Successfully built and pushed Docker arm64 image for branch: $GITHUB_REF" 
            
            

            
            

